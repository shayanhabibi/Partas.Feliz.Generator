        <RootNamespace>Partas.Feliz.Generator</RootNamespace>
        <AssemblyName>Partas.Feliz.Generator</AssemblyName>
        <Company>Partas</Company>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageTags>Partas;F#;Feliz;Generator;Fable;fable-javascript;Utility</PackageTags>
        <Authors>Shayan Habibi</Authors>
        <Copyright>Copyright (c) Shayan Habibi 2025</Copyright>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Version>0.1.1</Version>
